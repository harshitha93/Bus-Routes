<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="Route Detail"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/route_imv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="8dp"
            />

        <TextView
            android:id="@+id/route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="route name"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/route_imv"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/route_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="route name skjdhasjkdfbnadunxbck"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/route_imv"
            android:layout_below="@+id/route_name"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:maxLines="2"
            />

        <ImageView
            android:id="@+id/accessbility_imv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/accessibility_24"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            />

    </RelativeLayout>

    <include
        layout="@layout/stops_layout"/>

</LinearLayout>