<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    >

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp">

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/stops_indicator_48"
                />

            <View
                android:id="@+id/sub_indicator1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/stops_indicator"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
            <View
                android:id="@+id/sub_indicator2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/stops_indicator_check_icon"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>


        <ImageView
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image"
            android:background="@mipmap/vertical_line" />

    </RelativeLayout>

    <TextView
        android:id="@+id/stop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:text="bus route"
        android:textColor="@android:color/black" />


</LinearLayout>